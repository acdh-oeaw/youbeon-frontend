{
  "extends": "@stefanprobst/tsconfig",
  "compilerOptions": {
    "exactOptionalPropertyTypes": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "lib": ["dom", "dom.iterable", "es2021", "scripthost"]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.vue", "**/*.config.mjs"],
  "exclude": ["node_modules"]
}
