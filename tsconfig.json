{
  "extends": "@stefanprobst/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "exactOptionalPropertyTypes": false,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "preserveValueImports": false,
    "sourceMap": true,
    "useDefineForClassFields": true
  },
  "include": ["app.d.ts", "./config/**/*.ts", "./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.vue"]
}
