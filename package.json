{
	"name": "@acdh-oeaw/youbeon-frontend",
	"private": true,
	"version": "1.0.0",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "vite build",
		"dev": "vite --port 3000",
		"format:check": "prettier . --cache --check --ignore-path .gitignore --plugin prettier-plugin-tailwindcss",
		"format:fix": "pnpm run format:check --write",
		"generate:db": "ts-node --project ./tsconfig.node.json ./scripts/generate-db/index.ts",
		"generate:favicons": "ts-node --project ./tsconfig.node.json ./scripts/generate-favicons.ts",
		"generate:imprint": "ts-node --project ./tsconfig.node.json ./scripts/generate-imprint.ts",
		"lint:check": "run-p 'lint:*:check'",
		"lint:fix": "run-p 'lint:*:fix'",
		"lint:code:check": "eslint . --cache --ext cjs,js,mjs,ts,tsx,vue --ignore-path .gitignore",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"**/*.@(css|html|vue)\" --cache --ignore-path .gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"postinstall": "patch-package",
		"prepare": "run-s setup 'generate:*'",
		"preview": "vite preview --port 3000",
		"setup": "simple-git-hooks || exit 0",
		"test": "exit 0",
		"types:check": "vue-tsc",
		"validate": "run-s format:check lint:check types:check test"
	},
	"engines": {
		"node": ">=18",
		"pnpm": ">=7"
	},
	"packageManager": "pnpm@7.18.1",
	"dependencies": {
		"@fontsource/noto-sans-display": "^4.5.13",
		"@headlessui/tailwindcss": "^0.1.2",
		"@headlessui/vue": "^1.7.7",
		"@heroicons/vue": "^2.0.13",
		"@stefanprobst/object": "^1.2.0",
		"@vueuse/core": "^9.7.0",
		"d3": "^7.7.0",
		"force-graph": "^1.42.16",
		"leaflet": "^1.8.0",
		"nprogress": "^0.2.0",
		"vue": "^3.2.45",
		"vue-router": "^4.1.6"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.3.0",
		"@stefanprobst/assert": "^1.0.3",
		"@stefanprobst/commitlint-config": "^1.0.3",
		"@stefanprobst/eslint-config": "^1.0.10",
		"@stefanprobst/eslint-config-vue": "^1.0.2",
		"@stefanprobst/favicons": "^2.1.1",
		"@stefanprobst/log": "^1.0.3",
		"@stefanprobst/prettier-config": "^3.0.0",
		"@stefanprobst/request": "^0.2.1",
		"@stefanprobst/stylelint-config": "^2.5.1",
		"@stefanprobst/tsconfig": "^2.2.2",
		"@types/d3": "^7.4.0",
		"@types/leaflet": "^1.8.0",
		"@types/node": "^18.11.17",
		"@types/nprogress": "^0.2.0",
		"@types/prettier": "^2.7.1",
		"@types/serialize-javascript": "^5.0.2",
		"@vitejs/plugin-vue": "^4.0.0",
		"autoprefixer": "^10.4.13",
		"dotenv": "^16.0.3",
		"eslint": "^8.30.0",
		"lint-staged": "^13.1.0",
		"npm-run-all": "^4.1.5",
		"patch-package": "^6.5.0",
		"postcss": "^8.4.20",
		"postcss-custom-media": "^9.0.1",
		"postcss-html": "^1.5.0",
		"postcss-nesting": "^10.2.0",
		"prettier": "^2.8.1",
		"prettier-plugin-tailwindcss": "^0.2.1",
		"serialize-javascript": "^6.0.0",
		"simple-git-hooks": "^2.8.1",
		"stylelint": "^14.16.0",
		"stylelint-config-html": "^1.1.0",
		"tailwindcss": "^3.2.4",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.2",
		"vite-imagetools": "^4.0.11",
		"vue-tsc": "1.0.24",
		"xlsx": "^0.18.5"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"commitlint": {
		"extends": "@stefanprobst/commitlint-config"
	},
	"eslintConfig": {
		"extends": [
			"@stefanprobst/eslint-config",
			"@stefanprobst/eslint-config-vue"
		]
	},
	"lint-staged": {
		"*.@(cjs|js|mjs|ts|tsx)": [
			"eslint --cache --fix",
			"prettier --cache --plugin prettier-plugin-tailwindcss --write"
		],
		"*.@(css|html)": [
			"stylelint --cache --fix",
			"prettier --cache --plugin prettier-plugin-tailwindcss --write"
		],
		"*.vue": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --plugin prettier-plugin-tailwindcss --write"
		],
		"*.!(cjs|css|html|js|mjs|ts|tsx|vue)": "prettier --cache --ignore-unknown --plugin prettier-plugin-tailwindcss --write"
	},
	"postcss": {
		"plugins": {
			"postcss-html": {},
			"postcss-custom-media": {},
			"tailwindcss/nesting": {},
			"tailwindcss": {},
			"autoprefixer": {}
		}
	},
	"prettier": "@stefanprobst/prettier-config",
	"simple-git-hooks": {
		"commit-msg": "pnpm exec commitlint --edit",
		"pre-commit": "pnpm exec lint-staged",
		"pre-push": "pnpm run validate"
	},
	"stylelint": {
		"extends": [
			"stylelint-config-html/html",
			"stylelint-config-html/vue",
			"@stefanprobst/stylelint-config"
		]
	}
}
